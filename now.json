{
  "version": 2,
  "build": {
    "env": {
      "NOW_BUILDER_DEBUG": "1"
    }
  },
  "routes": [
    {
      "src": "/(.*[.ttf])",
      "headers": {
        "Cache-Control": "max-age=63072000"
      },
      "continue": true
    },
    {
      "src": "/api/font.ttf",
      "methods": [
        "GET"
      ],
      "dest": "/api/font.js"
    }
  ]
}